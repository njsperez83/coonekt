.header
  %nav.navbar{ :id => 'main_menu', :role => 'navigation' }
    .container
      .navbar-header
        %button.navbar-toggle{ :type => 'button', 'data-toggle' => 'collapse', 'data-target' => '#menu' }
          %i.fa.fa-bars

        .logo
          = link_to image_tag('logo.png'), root_path

      .collapse.navbar-collapse{ :id => 'menu' }
        %ul.nav.navbar-nav.pull-right
          - if user_signed_in?
            %li.dropdown.active
              %a{ :href => '#' }
                = current_user.first_name
              %ul.dropdown-menu
                %li
                  = link_to 'Home', users_home_path
                %li
                  = link_to 'Edit Page', users_edit_path
                %li
                  = link_to destroy_user_session_path, :method => :delete do
                    Log Out
          - else
            %li.active
              = link_to 'Join!', new_user_registration_path

