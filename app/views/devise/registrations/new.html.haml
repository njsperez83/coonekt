.container.wrapper.pad30

  .panel.panel-info.form
    .panel-heading
      %h3.panel-title
        Itâ€™s free and only takes minutes to set up a page. Join now or
        = link_to 'learn more', root_path
    .panel-body
      = render 'layouts/form_for_notifications'

      = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :role => 'form' }) do |f|

        .form-group.form-group-lg
          = f.text_field :first_name, :placeholder => 'First name', :class => 'form-control', :required => true

        .form-group.form-group-lg
          = f.text_field :last_name, :placeholder => 'Last name', :class => 'form-control', :required => true

        .form-group.form-group-lg
          %select.form-control.input-lg{ :lgid => "user_gender", :name => "user[gender]", :required => true }
            %option{ :value => ''} Gender
            %option{ :value => 'Male' } Male
            %option{ :value => 'Female' } Female

        .form-group.input-group.input-group-lg
          %span.input-group-addon
            %i.fa.fa-birthday-cake
          = f.date_field :birthday, :placeholder => 'mm/dd/yyyy', :class => 'form-control input-lg', :id => 'birthday'

        .form-group.input-group.input-group-lg
          %span.input-group-addon
            %i.fa.fa-envelope
          = f.email_field :email, placeholder: 'Email', class: 'form-control input-lg', :required => true

        .form-group.input-group.input-group-lg
          %span.input-group-addon
            %i.fa.fa-lock
          = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control input-lg', :required => true

        .form-group.input-group.input-group-lg
          %span.input-group-addon
            %i.fa.fa-lock
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password', class: 'form-control input-lg', :required => true

        = f.submit "Join for FREE", class: 'btn btn-primary btn-lg', data: { disable_with: "Joining..." }

        = render "devise/shared/links"
